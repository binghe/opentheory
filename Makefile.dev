###############################################################################
# Install and upload theories.
###############################################################################

THEORY_DIR = data/theories

HOL_LIGHT_THEORY_DIR = $(THEORY_DIR)/hol-light

OPENTHEORY_INIT = $(OPENTHEORY) init

OPENTHEORY_INSTALL = $(OPENTHEORY) install

OPENTHEORY_LIST = $(OPENTHEORY) list --dependency-order --name

OPENTHEORY_UPLOAD = $(OPENTHEORY) upload

.PHONY: reset-directory
reset-directory: $(OPENTHEORY)
	rm -rf $(HOME)/.opentheory
	$(OPENTHEORY_INIT)

.PHONY: hol-light-theories
hol-light-theories: $(OPENTHEORY)
	rm -rf $(HOL_LIGHT_THEORY_DIR)
	mkdir $(HOL_LIGHT_THEORY_DIR)
	cd ../hol-light && opentheory/capture

.PHONY: compilation-theories
compilation-theories: $(OPENTHEORY)
	$(OPENTHEORY_INSTALL) $(THEORY_DIR)/empty/empty.thy
	$(OPENTHEORY_INSTALL) $(THEORY_DIR)/bool-def/bool-def.thy
	$(OPENTHEORY_INSTALL) $(THEORY_DIR)/bool-int/bool-int.thy
	$(OPENTHEORY_INSTALL) $(THEORY_DIR)/bool-choice-cond/bool-choice-cond.thy
	$(OPENTHEORY_INSTALL) $(THEORY_DIR)/bool-choice/bool-choice.thy
	$(OPENTHEORY_INSTALL) $(THEORY_DIR)/bool/bool.thy
	$(OPENTHEORY_INSTALL) $(THEORY_DIR)/unit/unit.thy
	$(OPENTHEORY_INSTALL) $(THEORY_DIR)/function-def/function-def.thy
	$(OPENTHEORY_INSTALL) $(THEORY_DIR)/function/function.thy
	$(OPENTHEORY_INSTALL) $(THEORY_DIR)/pair/pair.thy
	$(OPENTHEORY_INSTALL) $(THEORY_DIR)/natural-numeral/natural-numeral.thy
	$(OPENTHEORY_INSTALL) $(THEORY_DIR)/natural-add/natural-add.thy
#	$(OPENTHEORY_INSTALL) $(THEORY_DIR)/natural/natural.thy
#	$(OPENTHEORY_INSTALL) $(THEORY_DIR)/base/base.thy

.PHONY: reset-repo
reset-repo:
	curl --user-agent opentheory "http://opentheory.gilith.com/admin/?x=reset"

.PHONY: upload-theories
upload-theories: $(OPENTHEORY)
	for pkg in $$($(OPENTHEORY_LIST)) ; do if ! $(OPENTHEORY_UPLOAD) $$pkg ; then exit 1 ; fi ; done

.PHONY: directory-theories
directory-theories:
	$(MAKE) reset-directory
	$(MAKE) hol-light-theories
	$(MAKE) compilation-theories

.PHONY: theories
theories:
	$(MAKE) directory-theories
	$(MAKE) reset-repo
	$(MAKE) upload-theories

###############################################################################
# Initialization following a repo clone.
###############################################################################

TEST_PACKAGE_DIR = test/directory

TEST_OPENTHEORY = $(OPENTHEORY) -d $(TEST_PACKAGE_DIR)

.PHONY: init
init:
	$(MAKE) $(OPENTHEORY)
	rm -rf $(TEST_PACKAGE_DIR)
	$(TEST_OPENTHEORY) init
	$(TEST_OPENTHEORY) install $(THEORY_DIR)/empty/empty.thy
	$(TEST_OPENTHEORY) install $(THEORY_DIR)/bool-def-true/bool-def-true.thy
	$(TEST_OPENTHEORY) install $(THEORY_DIR)/bool-int-true/bool-int-true.thy
	$(TEST_OPENTHEORY) install $(THEORY_DIR)/bool-true/bool-true.thy

###############################################################################
# Counting the number of lines of code.
###############################################################################

LINES = scripts/ml_lines

.PHONY: lines
lines: $(LINES)
	@echo
	@echo -n 'opentheory '
	@$(LINES) $(SRC) src/opentheory.sml
	@echo

###############################################################################
# Profiling using MLton.
###############################################################################

BENCHMARK_OPTS = -d test/opentheory compile --article benchmark.out test/opentheory/packages/hol-light-2009.8.24/hol-light.thy

profile-time.mlb: bin/mlton/benchmark.sml
	echo '$$(SML_LIB)/basis/basis.mlb $$(SML_LIB)/basis/mlton.mlb $<' > $@

profile-time: profile-time.mlb
	@echo
	@echo '********************************************************'
	@echo '* Compile the OpenTheory benchmark with time profiling *'
	@echo '********************************************************'
	@echo
	$(MLTON) $(MLTON_OPTS) -profile time -profile-stack true -profile-branch true $<
	@echo

profile-time.out profile-time-log: profile-time
	time ./profile-time $(BENCHMARK_OPTS) | tee profile-time.log
	mv mlmon.out profile-time.out

profile-time.txt: profile-time.out Makefile.dev
	mlprof -show-line true -raw true -keep '(and (thresh 0.1) (thresh-stack 0.1))' -split '.*' profile-time profile-time.out > $@

profile-time.dot: profile-time.out Makefile.dev
	mlprof -show-line true -raw true -call-graph $@ -keep '(thresh-stack 5)' -graph-title "OpenTheory Time Profiling" -split '.*' profile-time profile-time.out > /dev/null

.PHONY: profile
profile: profile-time.txt profile-time.dot

###############################################################################
# Releasing.
###############################################################################

RELEASE_DIR = release

RELEASE_STAMP = scripts/release_stamp

.PHONY: release-stamp
release-stamp: $(RELEASE_STAMP)
	 $(RELEASE_STAMP) -p opentheory doc/*.html src/opentheory.sml

doc/hol-light.tgz: Makefile.dev
	cd ../hol-light && tar cvzf ../opentheory/doc/hol-light.tgz --exclude 'opentheory/articles/*' opentheory/articles opentheory/hol-light.int opentheory/logging.ml

.PHONY: documentation
documentation: doc/hol-light.tgz

.PHONY: tarball
tarball: clean doc/DONT-RELEASE Makefile.dev
	cd .. ; tar cvzhf opentheory/release/opentheory.tar.gz --exclude-from opentheory/doc/DONT-RELEASE opentheory

.PHONY: release
release: release-stamp mosml mlton polyml documentation
	rm -f $(RELEASE_DIR)/*.html $(RELEASE_DIR)/*.txt $(RELEASE_DIR)/*.png
	cp -v doc/*.html doc/*.txt doc/*.png $(RELEASE_DIR)/
	cp -v doc/favicon.ico $(RELEASE_DIR)/
	cp -v doc/GPL-LICENSE $(RELEASE_DIR)/
	cp -v doc/hol-light.tgz $(RELEASE_DIR)/
	cp -v doc/MIT-LICENSE $(RELEASE_DIR)/
	$(MAKE) tarball
	rsync -azv --delete --checksum --size-only --exclude=.cvsignore --exclude=CVS -e ssh $(RELEASE_DIR)/ gilith@login.gilith.com:public_html/software/opentheory
	ssh gilith@login.gilith.com '/bin/bash -l scripts/install_opentheory'
	echo Completed release

###############################################################################
# The build scripts.
###############################################################################

$(COPY): ../basic/scripts/copy_src
	@cp -fv $< $@
	@chmod -w $@

$(MLIMPORT): ../basic/scripts/mlimport $(COPY) ; @$(COPY) $< $@

$(MLPP): ../basic/scripts/mlpp $(COPY) ; @$(COPY) $< $@

$(MOSML_DEP): ../basic/scripts/mosml_dep $(COPY) ; @$(COPY) $< $@

$(LINES): ../basic/scripts/ml_lines $(COPY) ; @$(COPY) $< $@

$(RELEASE_STAMP): ../basic/scripts/release_stamp $(COPY) ; @$(COPY) $< $@

.PHONY: build-scripts
build-scripts: $(COPY) $(MLPP) $(MOSML_DEP) $(LINES) $(RELEASE_STAMP)
