signature PackageId =
sig

(* ------------------------------------------------------------------------- *)
(* A type of theory package ids.                                             *)
(* ------------------------------------------------------------------------- *)

type id

val base : id -> string

val version : id -> PackageVersion.version

(* ------------------------------------------------------------------------- *)
(* A total order.                                                            *)
(* ------------------------------------------------------------------------- *)

val compare : id * id -> order

val equal : id -> id -> bool

(* ------------------------------------------------------------------------- *)
(* Pretty printing.                                                          *)
(* ------------------------------------------------------------------------- *)

val pp : id Print.pp

(* ------------------------------------------------------------------------- *)
(* Parsing.                                                                  *)
(* ------------------------------------------------------------------------- *)

val parser : (char,id) Parse.parser

end
