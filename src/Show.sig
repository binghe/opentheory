signature Show =
sig

(* ------------------------------------------------------------------------- *)
(* A type of namespace import map.                                           *)
(* ------------------------------------------------------------------------- *)

type show

(* ------------------------------------------------------------------------- *)
(* The empty map.                                                            *)
(* ------------------------------------------------------------------------- *)

val natural : show

(* ------------------------------------------------------------------------- *)
(* Adding mappings.                                                          *)
(* ------------------------------------------------------------------------- *)

val add : show -> Namespace.namespace * Namespace.namespace -> show

(* ------------------------------------------------------------------------- *)
(* Looking up mappings.                                                      *)
(* ------------------------------------------------------------------------- *)

val peek : show -> Namespace.namespace -> Namespace.namespace option

(* ------------------------------------------------------------------------- *)
(* Printing.                                                                 *)
(* ------------------------------------------------------------------------- *)

val pp : show Print.pp

end
